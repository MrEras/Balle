<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyCustomButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="colorAccent">@color/payButton</item>
    </style>
    <style name="CancelButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="colorAccent">@color/redButton</item>
    </style>
    <style name="askButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="colorAccent">@color/blackButton</item>
    </style>


</resources>
