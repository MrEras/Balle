<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/btn_service"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/servicio_icono"
                    android:layout_marginRight="10dp"/>

                <ImageButton
                    android:id="@+id/btn_drivers"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/chofer_icono"/>

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/servicelbl"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Servicio"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:paddingLeft="60dp"/>
                <TextView
                    android:id="@+id/driver_lbl"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Choferes"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:paddingLeft="60dp"/>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_parking"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/estacionamiento_icono"
                    android:layout_marginRight="10dp"/>

                <ImageButton
                    android:id="@+id/btn_profile"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/perfil_icono"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/parkinglbl"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Estacionamientos"
                    android:textSize="18dp"
                    android:layout_weight=".3"
                    android:paddingLeft="25dp"/>
                <TextView
                    android:id="@+id/profilelbl"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Perfil"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:paddingLeft="60dp"/>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_insurance"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/seguro_icono"
                    android:layout_marginRight="10dp"/>

                <ImageButton
                    android:id="@+id/btn_info"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/infolegal_icono"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/segurolbl"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Seguro"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:paddingLeft="60dp"/>
                <TextView
                    android:id="@+id/infolbl"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Info. Legal"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:paddingLeft="60dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


